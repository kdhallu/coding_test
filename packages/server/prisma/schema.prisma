generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MeterData {
  id          Int      @id @default(autoincrement())
  measurement String   @map("measurement")
  timestamp   DateTime @map("timestamp") @db.Timestamptz(6)
  key         String   @map("key") // Storing the key (e.g., "0100011D00FF")
  value       Float    @map("value") // Storing the value for the key (e.g., 0.0117)

  // Store the tags as a JSON field
  tags Json @map("tags") // JSON object containing "muid" and "quality"

  @@map(name: "meterdata")
}
